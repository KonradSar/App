<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/singleLineLay"
    android:background="@drawable/green"
    android:orientation="horizontal"
    android:layout_margin="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dutyLabel"
        android:text="Rzecz do zrobienia -"
        android:layout_marginTop="@dimen/upperMarginForBinDutyLabel"
        android:layout_marginLeft="@dimen/leftMarginForBinDutyLabel"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/deletebtn"
        android:src="@drawable/bin"
        android:layout_marginTop="@dimen/upperMarginForBinImageBtn"
        android:layout_marginBottom="@dimen/lowerMarginForBinImageBtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/rightMarginForBinImageBtn"
        />


</RelativeLayout>
